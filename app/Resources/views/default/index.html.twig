{% extends 'base.html.twig' %}

{% block body %}
    <br/>
    <div class="jumbotron">
        <h1>Welcome to OpenChan</h1>
        <h3>Boards</h3>
        <p>

        <ul class="list-group">
            {% for board in boards %}
            <li class="list-group-item">
                <span class="badge">{{board.getThreads|length}}</span>
                <a href="{{ path('thread_index', {'board_name': board.getName }) }}">/{{board.name}}/ - {{board.text}}</a>
            </li>
            {% endfor %}
        </ul>
        
    </p>
</div>
{% endblock %}

